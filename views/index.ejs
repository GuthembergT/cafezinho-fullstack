<!doctype html>
<html>
<head>
    <title>Cafézinho</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1>Cafézinho</h1>
        <img src="img/cafezinho.jpg" alt="Cafézinho Design">

        <p>Login or Signup:</p>

        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>
        <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span>Signup</a>

    </div>


</div>

<section class="cashierContainer">
   <div class="cashierTitle">
     <h2>Cashier: Input Order Below</h2>
   </div>
   
   <form class="cashierTitle" action="/program1" method="POST">
     <input type="text" class='name2' value="" placeholder="customer name" name="name">
     <br>
     <label for="espresso">Espresso</label>
     <input type="radio" name="order" id="espresso" value="Espresso">
     <label for="latte">Latte</label>
     <input type="radio" name="order" id="latte" value="Lattee">
     <label for="mocha">Mocha</label>
     <input type="radio" name="order" id="mocha" value="Mocha">
     <label for="americano">Americano</label>
     <input type="radio" name="order" id="americano" value="Americano">
     <label for="cafezinho">Cafézinho</label>
     <input type="radio" name="order" id="cafezinho" value="Cafézinho">
     <br>
     <select class="Size" name="orderSize">
       <option  value="Small">Small</option>
       <option value="Medium">Medium</option>
       <option value="Large">Large</option>
     </select>
     <button type="submit">Submit</button>
   </form>
   </section>
</body>
</html>
